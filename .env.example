# Environment Configuration
ENVIRONMENT=development
DEBUG=true
APP_NAME=Stock Analysis System
APP_VERSION=0.1.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stock_analysis
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_RELOAD=true
API_WORKERS=1

# Security
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Data Sources
TUSHARE_TOKEN=your_tushare_token_here
TUSHARE_TIMEOUT=30
AKSHARE_TIMEOUT=30
DATA_REQUESTS_PER_MINUTE=200
DATA_RETRY_ATTEMPTS=3
DATA_RETRY_DELAY=1

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=Asia/Shanghai
CELERY_ENABLE_UTC=true

# Machine Learning
MLFLOW_TRACKING_URI=sqlite:///mlruns.db
MLFLOW_REGISTRY_URI=
ML_EXPERIMENT_NAME=stock-analysis
MODEL_RETRAIN_DAYS=30
MODEL_DRIFT_THRESHOLD=0.1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=logs/app.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# Spring Festival Analysis
SPRING_FESTIVAL_WINDOW_DAYS=60
MIN_YEARS_FOR_ANALYSIS=3

# Risk Management
DEFAULT_CONFIDENCE_LEVEL=0.95
MAX_POSITION_SIZE=0.1

# Caching
CACHE_TTL_SECONDS=3600

# Dask Parallel Processing
DASK_N_WORKERS=4
DASK_THREADS_PER_WORKER=2
DASK_MEMORY_LIMIT=2GB
DASK_CHUNK_SIZE=100
DASK_ENABLE_DISTRIBUTED=false
DASK_SCHEDULER_ADDRESS=
DASK_MEMORY_TARGET_FRACTION=0.6
DASK_MEMORY_SPILL_FRACTION=0.7
DASK_MEMORY_PAUSE_FRACTION=0.8
DASK_MEMORY_TERMINATE_FRACTION=0.95
DASK_CONNECT_TIMEOUT=60s
DASK_TCP_TIMEOUT=60s